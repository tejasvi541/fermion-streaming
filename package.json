{
  "name": "fermion-streaming",
  "version": "1.0.0",
  "description": "WebRTC streaming application with HLS broadcasting using Next.js and Node.js",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "cd server && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
    "start:server": "cd server && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd server && npm install && cd ../frontend && npm install",
    "clean": "rimraf server/dist server/node_modules frontend/.next frontend/node_modules node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webrtc",
    "streaming",
    "hls",
    "mediasoup",
    "nextjs",
    "nodejs",
    "typescript",
    "real-time",
    "video",
    "audio"
  ],
  "author": "Tejasvi",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tejasvi541/fermion-streaming.git "
  },
  "bugs": {
    "url": "https://github.com/tejasvi541/fermion-streaming/issues"
  },
  "homepage": "https://github.com/tejasvi541/fermion-streaming#readme"
}
